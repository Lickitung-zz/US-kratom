doctype html
html(lang="en")

  //- head.pug template
  include head 
  
  // Body
  body

    //- modal-example.pug template
    if isModalExample
      include modal-example

    //- bootstrap-toast.pug template
    if isBSToast
      include bootstrap-toast

    //- modal-ticket.pug template
    if isModalTicket
      include modal-ticket

    //- modal-order.pug template
    if isModalOrder
      include modal-order

    //- modal-shop-filters.pug template
    if isModalShopFilters
      include modal-shop-filters

    //- modal-shop-categories.pug template
    if isModalShopCategories
      include modal-shop-categories

    //- modal-blog-sidebar.pug template
    if isModalBlogSidebar
      include modal-blog-sidebar

    //- offcanvas.pug template
    include off-canvas

    //- topbar.pug template
    if isHeader
      if isDarkHeader
        include topbar-dark
      else
        include topbar

    //- navbar.pug template
    if isHeader
      if isDarkHeader
        include navbar-dark
      else
        include navbar

    // Off-Canvas Wrapper
    .offcanvas-wrapper

      //- page-title.pug template
      if isPageTitle
        include page-title

      // Page Content
      block content

      //- footer.pug template
      if isFooter
        include footer

    //- photoswipe.pug template
    if isGallery
      include photoswipe
    
    // Back To Top Button
    a(href='#').scroll-to-top-btn
      i.icon-arrow-up

    // Backdrop
    .site-backdrop
    
    // JavaScript (jQuery) libraries, plugins and custom scripts
    script()&attributes(isNestedFile ? {'src': '../js/vendor.min.js'} : {'src': 'js/vendor.min.js'})
    if isCardScript
      script()&attributes(isNestedFile ? {'src': '../js/card.min.js'} : {'src': 'js/card.min.js'})
    script()&attributes(isNestedFile ? {'src': '../js/scripts.min.js'} : {'src': 'js/scripts.min.js'})
    if isCustomizer
      // Customizer scripts
      script()&attributes(isNestedFile ? {'src': '../customizer/customizer.min.js'} : {'src': 'customizer/customizer.min.js'})
