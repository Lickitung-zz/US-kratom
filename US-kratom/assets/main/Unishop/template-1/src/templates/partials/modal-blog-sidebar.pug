// Blog Sidebar Modal
div(id='modalBlogSidebar' tabindex='-1').modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        h4.modal-title Blog Sidebar
        button(type='button' class='close' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body

        // Widget Search
        section.widget
          form(method='get').input-group.form-group
            span.input-group-btn
              button(type='submit')
                i.icon-search
            input(type='search' placeholder='Search blog').form-control

        // Widget Categories
        section.widget.widget-categories
          h3.widget-title Categories
          ul
            li
              a(href='#') Editor's Choice
              <span>(24)</span>
            li
              a(href='#') Fashion
              <span>(12)</span>
            li
              a(href='#') Travel
              <span>(5)</span>
            li
              a(href='#') Online Shopping
              <span>(7)</span>
            li
              a(href='#') Closing Design
              <span>(3)</span>

        // Widget Featured Posts
        section.widget.widget-featured-posts
          h3.widget-title Featured Posts
          // Entry
          .entry
            .entry-thumb
              a(href='blog-single-rs.html')
                img(src='img/blog/widget/01.jpg', alt='Post')
