extends ../partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Pills'
  - var isNestedFile = true
  - var parentMenu = 'Components'
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'Components', 'link': 'accordion.html'}, {'title': 'Pills'}]

//- Page Content
block content
