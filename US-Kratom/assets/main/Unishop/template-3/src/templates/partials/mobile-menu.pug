// Mobile Menu
.mobile-menu

  // Search Box
  .mobile-search
    form(method='get').input-group
      span.input-group-btn
        button(type='submit')
          i.icon-search
      input(type='search' placeholder='Search site').form-control
  
  // Toolbar
  .toolbar
    .toolbar-item
      a(href='#')
        div
          i.flag-icon
            +image('img/flags/EN.png', 'English')
          span.text-label Eng / Usd
      ul.toolbar-dropdown.lang-dropdown.w-100
        li.px-3.pt-1.pb-2
          select.form-control.form-control-sm
            option(value='usd') $ USD
            option(value='usd') € EUR
            option(value='usd') £ UKP
            option(value='usd') ¥ JPY
        li
          a(href='#')
            i.flag-icon
              +image('img/flags/FR.png', 'Français')
            | &nbsp;Français
        li
          a(href='#')
            i.flag-icon
              +image('img/flags/DE.png', 'Deutsch')
            | &nbsp;Deutsch
        li
          a(href='#')
            i.flag-icon
              +image('img/flags/IT.png', 'Italiano')
            | &nbsp;Italiano
    .toolbar-item
      a()&attributes(isNestedFile ? {'href': '../product-comparison.html'} : {'href': 'product-comparison.html'})
        div
          span.compare-icon
            i.icon-repeat
            span.count-label 3
          span.text-label Compare
    .toolbar-item
      a()&attributes(isNestedFile ? {'href': '../account-login.html'} : {'href': 'account-login.html'})
        div
          i.icon-user
          span.text-label Sign In / Up

  // Slideable (Mobile) Menu
  nav.slideable-menu
    ul(data-initial-height='385').menu
      li()&attributes((parentMenu === 'Home') ? {'class': 'has-children active'} : {'class': 'has-children'})
        span
          +menu-link('index.html', 'Home')
          span.sub-menu-toggle
        ul.slideable-submenu
          +submenu-item('index.html', 'Hero Slider')
          +submenu-item('home-featured-categories.html', 'Categories Grid')
      li()&attributes((parentMenu === 'Shop') ? {'class': 'has-children active'} : {'class': 'has-children'})
