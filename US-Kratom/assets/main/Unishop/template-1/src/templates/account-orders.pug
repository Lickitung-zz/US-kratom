extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'My Orders'
  - var parentMenu = 'Account'
  - var menuTitle = 'Orders List'
  - var isModalOrder = true
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'Account', 'link': 'account-orders.html'}, {'title': 'My Orders'}]

//- Page Content
block content
  .container.padding-bottom-3x.mb-2
    .row
      .col-lg-4
        aside.user-info-wrapper
          .user-cover(style='background-image: url(img/account/user-cover-img.jpg);')
            .info-label(data-toggle='tooltip', title='You currently have 290 Reward Points to spend')
              i.icon-medal
              | 290 points
          .user-info
            .user-avatar
              a(href='#').edit-avatar
              img(src='img/account/user-ava.jpg', alt='User')
            .user-data
              h4 Daniel Adams
              span Joined February 06, 2017
        nav.list-group
          a(href='account-orders.html').list-group-item.with-badge.active
            i.icon-bag
            | Orders
            span.badge.badge-primary.badge-pill 6
          a(href='account-profile.html').list-group-item
            i.icon-head
            | Profile
          a(href='account-address.html').list-group-item
            i.icon-map
            | Addresses
          a(href='account-wishlist.html').list-group-item.with-badge
            i.icon-heart
            | Wishlist
            span.badge.badge-primary.badge-pill 3
          a(href='account-tickets.html').list-group-item.with-badge
            i.icon-tag
            | My Tickets
            span.badge.badge-primary.badge-pill 4
      .col-lg-8
        .padding-top-2x.mt-2.hidden-lg-up
        .table-responsive
          table.table.table-hover.margin-bottom-none
            thead
              tr
                th Order #
                th Date Purchased
                th Status
                th Total
            tbody
              tr
                td
                  a(href='#' data-toggle='modal' data-target='#orderDetails').text-medium.navi-link 78A643CD409
                td August 08, 2017
                td
                  span.text-danger Canceled
                td
                  span.text-medium $760.50
              tr
                td
                  a(href='#' data-toggle='modal' data-target='#orderDetails').text-medium.navi-link 34VB5540K83
                td July 21, 2017
                td
                  span.text-info In Progress
                td
                  span.text-medium $315.20
              tr
                td
                  a(href='#' data-toggle='modal' data-target='#orderDetails').text-medium.navi-link 112P45A90V2
                td June 15, 2017
                td
                  span.text-warning Delayed
                td
                  span.text-medium $1,264.00
              tr
                td
                  a(href='#' data-toggle='modal' data-target='#orderDetails').text-medium.navi-link 28BA67U0981
                td May 19, 2017
                td
                  span.text-success Delivered
                td
                  span.text-medium $198.35
              tr
                td
                  a(href='#' data-toggle='modal' data-target='#orderDetails').text-medium.navi-link 502TR872W2
                td April 04, 2017
                td
                  span.text-success Delivered
                td
                  span.text-medium $2,133.90
              tr
                td
                  a(href='#' data-toggle='modal' data-target='#orderDetails').text-medium.navi-link 47H76G09F33
                td March 30, 2017
                td
                  span.text-success Delivered
                td
                  span.text-medium $86.40
        hr
        .text-right
          a(href='#' class='btn btn-link-primary margin-bottom-none')
            i.icon-download
            | &nbsp;Order Details
