extends partials/layout

//- Override default config variables
append config
  - var pageTitle = 'My Profile'
  - var parentMenu = 'Account'
  - var menuTitle = 'Profile Page'
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'Account', 'link': 'account-orders.html'}, {'title': 'My Profile'}]

//- Page Content
block content
  .container.padding-bottom-3x.mb-2
    .row
      .col-lg-4
        aside.user-info-wrapper
          .user-cover(style='background-image: url(img/account/user-cover-img.jpg);')
            .info-label(data-toggle='tooltip', title='You currently have 290 Reward Points to spend')
              i.icon-medal
              | 290 points
          .user-info
            .user-avatar
              a(href='#').edit-avatar
              img(src='img/account/user-ava.jpg', alt='User')
            .user-data
              h4 Daniel Adams
              span Joined February 06, 2017
        nav.list-group
          a(href='account-orders.html').list-group-item.with-badge
            i.icon-bag
            | Orders
            span.badge.badge-primary.badge-pill 6
          a(href='account-profile.html').list-group-item.active
            i.icon-head
            | Profile
          a(href='account-address.html').list-group-item
            i.icon-map
            | Addresses
          a(href='account-wishlist.html').list-group-item.with-badge
            i.icon-heart
            | Wishlist
            span.badge.badge-primary.badge-pill 3
          a(href='account-tickets.html').list-group-item.with-badge
            i.icon-tag
            | My Tickets
            span.badge.badge-primary.badge-pill 4
      .col-lg-8
        .padding-top-2x.mt-2.hidden-lg-up
        form.row
          .col-md-6
            .form-group
              label(for='account-fn') First Name
              input(type='text' id='account-fn' value='Daniel' required).form-control
          .col-md-6
            .form-group
              label(for='account-ln') Last Name
              input(type='text' id='account-ln' value='Adams' required).form-control
          .col-md-6
            .form-group
              label(for='account-email') E-mail Address
              input(type='email' id='account-email' value='daniel.adams@mail.com' disabled).form-control
          .col-md-6
            .form-group
              label(for='account-phone') Phone Number
              input(type='text' id='account-phone' value='+7(805) 348 95 72' required).form-control
          .col-md-6
            .form-group
              label(for='account-pass') New Password
              input(type='password' id='account-pass').form-control
          .col-md-6
            .form-group
              label(for='account-confirm-pass') Confirm Password
              input(type='password' id='account-confirm-pass').form-control
          .col-12
            hr.mt-2.mb-3
            .d-flex.flex-wrap.justify-content-between.align-items-center
              .custom-control.custom-checkbox.d-block
                input(type='checkbox' id='subscribe_me' checked).custom-control-input
                label(for='subscribe_me').custom-control-label Subscribe me to Newsletter
              button(type='button' class='btn btn-primary margin-right-none' data-toast data-toast-position='topRight' data-toast-type='success' data-toast-icon='icon-circle-check' data-toast-title='Success!' data-toast-message='Your profile updated successfuly.') Update Profile
