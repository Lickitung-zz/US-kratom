extends ../partials/layout

//- Override default config variables
append config
  - var pageTitle = 'Steps'
  - var isNestedFile = true
  - var parentMenu = 'Components'
  - var breadcrumbs = [{'title': 'Home', 'link': 'index.html'}, {'title': 'Components', 'link': 'accordion.html'}, {'title': 'Steps'}]

//- Page Content
block content
  .container.padding-bottom-3x.mb-2
    .row
      .col-lg-9.col-md-8.order-md-2
        h6.text-muted.text-normal.text-uppercase Version 1 (Basic Example)
        hr.margin-bottom-1x.pb-2
        .checkout-steps
          a(href='#') 4. Review
          a(href='#')
            span.angle
            | 3. Payment
          a(href='#')
            span.angle
            | 2. Shipping
          a(href='#' class='active')
            span.angle
            | 1. Address
        h6.text-muted.text-normal.text-uppercase.padding-top-1x.mt-3 Version 1 (Completed Steps)
        hr.margin-bottom-1x.pb-2
        .checkout-steps
          a(href='#') 4. Review
          a(href='#' class='active')
            span.angle
            | 3. Payment
          a(href='#' class='completed')
            span.step-indicator.icon-circle-check
            span.angle
            | 2. Shipping
          a(href='#' class='completed')
            span.step-indicator.icon-circle-check
            span.angle
            | 1. Address
        h6.text-muted.text-normal.text-uppercase.padding-top-1x.mt-3 Version 2 (Basic Example)
        hr.margin-bottom-1x.pb-2
        .steps.d-flex.flex-wrap.flex-sm-nowrap.justify-content-between
          .step
            .step-icon-wrap
              .step-icon: i.pe-7s-cart
            h4.step-title Confirmed Order
          .step
            .step-icon-wrap
              .step-icon: i.pe-7s-config
            h4.step-title Processing Order
          .step
            .step-icon-wrap
              .step-icon: i.pe-7s-medal
            h4.step-title Quality Check
          .step
            .step-icon-wrap
              .step-icon: i.pe-7s-car
            h4.step-title Product Dispatched
        h6.text-muted.text-normal.text-uppercase.padding-top-1x.mt-3 Version 2 (Completed Steps)
        hr.margin-bottom-1x.pb-2
        .steps.d-flex.flex-wrap.flex-sm-nowrap.justify-content-between
          .step.completed
            .step-icon-wrap
              .step-icon: i.pe-7s-cart
            h4.step-title Confirmed Order
          .step.completed
            .step-icon-wrap
              .step-icon: i.pe-7s-config
            h4.step-title Processing Order
          .step
            .step-icon-wrap
              .step-icon: i.pe-7s-medal
            h4.step-title Quality Check
          .step
            .step-icon-wrap
              .step-icon: i.pe-7s-car
            h4.step-title Product Dispatched
          
      
      .col-lg-3.col-md-4.order-md-1
        //- Side Menu
        include ../partials/side-menu