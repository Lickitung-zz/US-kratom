    // Reviews
    .row.mt-30
      .col-md-4.mb-4
        .card.border-default
          .card-body
            .text-center
              .d-inline.align-baseline.display-2.mr-1 4.6
              .d-inline.align-baseline.text-sm.text-warning.mr-1
