        // Comment Form
        h4.padding-top-2x.padding-bottom-1x Leave a Comment
        form(method='post').row
          .col-sm-6
            .form-group
              label(for='comment-name') Name
              input(type='text' id='comment-name' placeholder='John Doe' required).form-control
          .col-sm-6
            .form-group
              label(for='comment-email') E-mail
              input(type='email' id='comment-email' placeholder='johndoe@email.com' required).form-control
          .col-12
            .form-group
              label(for='comment-text') Comment
              textarea(rows='7' id='comment-text' placeholder='Write your comment here...' required).form-control
          .col-12.text-right
            button(type='submit').btn.btn-primary Post Comment