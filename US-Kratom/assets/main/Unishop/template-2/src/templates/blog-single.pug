          .column
            span
              i.material-icons.date_range
              | &nbsp;Jul 24, 2017
            span.divider
            a(href='#comments').scroll-to
              i.material-icons.chat_bubble_outline
              | &nbsp;13

        // Image Carousel
        .owl-carousel(data-owl-carousel='{ "nav": true, "dots": true, "loop": true }')
