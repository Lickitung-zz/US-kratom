        // Post Navigation
        .entry-navigation
          .column.text-left
            a(href='#' class='btn btn-outline-secondary btn-sm')
              i.material-icons.keyboard_arrow_left
              | &nbsp;Prev
          .column
            a(href='blog.html' class='btn btn-outline-secondary view-all' data-toggle='tooltip' data-placement='top' title='All entries')
              i.material-icons.menu
          .column.text-right
            a(href='#' class='btn btn-outline-secondary btn-sm')
